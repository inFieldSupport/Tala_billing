
<div class="flex flex-col">
<div>
<div class="py-4 inline-block min-w-full sm:px-6 lg:px-8">
<div class="overflow-hidden">
<table class="min-w-full text-center">
<caption class="text-xl italic font-semibold text-gray-900 dark:text-white">Client: <%= @client.client_name %> (Users)</caption>
<thead class="border-b bg-gray-600">
  <tr>
   <th scope="col" class="text-sm font-semibold  font-sans text-white px-4 py-4"></th>
   <th scope="col" class="text-sm font-semibold font-sans text-white px-4 py-4">Rate</th>
   <th scope="col" class="text-sm font-semibold font-sans text-white px-4 py-4">Registered</th>
   <th scope="col" class="text-sm font-semibold font-sans text-white px-4 py-4">Actives</th>
   <th scope="col" class="text-sm font-semibold font-sans text-white px-4 py-4">Total Amount</th>
  </tr>
</thead class="border-b">
<tbody>
 <% @total_rate_user=0 %>
 <% @total_amount_user = 0 %>
 
 <tr class="bg-white border-b">
   <%= render "admin_panel/user",type:"Admin" %>
 </tr class="bg-white border-b">

  <tr class="bg-white border-b">
    <%= render "admin_panel/user",type:"Dispatcher" %>
 </tr class="bg-white border-b">

 <tr class="bg-white border-b">
  <%= render "admin_panel/user",type:"Mechanic" %>
 </tr class="bg-white border-b">

 <tr class="bg-white border-b">
  <%= render "admin_panel/user",type:"Office_Staff"%>
 </tr class="bg-white border-b">
 
  <tr class="bg-white border-b">
   <%= render "admin_panel/user",type:"Sub_Contractor" %>
  
 </tr class="bg-white border-b">

 <tr class="bg-white border-b">
  <%= render "admin_panel/user",type: "Technician" %>
 </tr class="bg-white border-b">

  <tr class="bg-white border-b">
   <%= render "admin_panel/user",type: "Consumer" %>
 </tr class="bg-white border-b">

 <tr class="bg-white border-b">
  <td class="text-sm text-gray-900 font-bold font-sans px-4 py-4 whitespace-nowrap text-center bg-gray-300">Total Amount</td>
  <td class="text-sm text-gray-900 font-bold font-sans px-4 py-4 whitespace-nowrap text-center bg-gray-300"> $<%= @total_rate_user.round(2) %></td>
  <td class="text-sm text-gray-900 font-bold font-sans px-4 py-4 whitespace-nowrap text-center bg-gray-300"> <%= User.where(client: @client).count %></td>
  <td class="text-sm text-gray-900 font-bold font-sans px-4 py-4 whitespace-nowrap text-center bg-gray-300"> <%= User.where(active_user: true,client: @client).count %></td>
  <td class="text-sm text-gray-900 font-bold font-sans px-4 py-4 whitespace-nowrap text-center bg-gray-300"> $<%= @total_amount_user.round(2) %></td>
 </tr class="bg-white border-b">


</tbody>
</table>
</div>
</div>
</div>

